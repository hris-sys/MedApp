@model ToDo.Web.ViewModels.Messages.MessageInputModel

@{
    ViewData["Title"] = "Index";
}


<h4>Create and send an email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <label asp-for="ReceiverUserId" class="control-label required"></label>
            <select asp-for="ReceiverUserId" class="form-control">
                @foreach (var user in this.ViewBag.Users)
                {
                    <option value="@user.Id">@user.UserName</option>
                }
            </select>
            <span asp-validation-for="ReceiverUserId" class="text-danger"></span>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllMessages">Back to List</a>
</div>

